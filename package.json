{
  "name": "app",
  "version": "1.0.0",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "test": "node --test ./tests/*.mjs && npm --prefix client run test",
    "test:integration": "node --test ./tests/integration/*.test.mjs",
    "test:unit": "node --test ./tests/*.test.mjs ./tests/server/*.test.mjs",
    "test:all": "npm run test:unit && npm run test:integration && npm --prefix client run test",
    "check:i18n": "node scripts/i18n-compare.cjs client/src/locales/fr.js client/src/locales/en.js client/src/locales/nl.js",
    "ci": "npm run lint:server && npm run check:i18n && npm run test:unit && npm run test:integration && npm --prefix client run test:ci",
    "lint": "npm --prefix client run lint",
    "lint:server": "npm --prefix client exec eslint -- --config eslint.server.cjs \"server/**/*.js\" \"scripts/**/*.js\"",
    "smoke:test": "bash ./scripts/smoke-test.sh",
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "reports": "node scripts/view-reports.js",
    "build": "npm --prefix client install --include=dev && npm --prefix client run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "async-mutex": "^0.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dexie-react-hooks": "^4.2.0",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.2",
    "pino": "^9.0.0",
    "pino-http": "^10.0.0",
    "react-window": "^2.2.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
